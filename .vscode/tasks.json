{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: Clean, Build, and Up (Podman/Docker Compose)",
      "type": "shell",
      "command": "./dev.sh ${input:targetEnv}",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "targetEnv",
      "type": "pickString",
      "description": "Choose target environment",
      "options": ["dev", "test", "prod"],
      "default": "dev"
    }
  ]
}
